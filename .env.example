# -----------------------------------------------------------------------------
# Database
# -----------------------------------------------------------------------------
# Neon PostgreSQL connection string (async driver)
# Format: postgresql+asyncpg://user:password@host/dbname?sslmode=require
DATABASE_URL=postgresql+asyncpg://user:password@ep-cool-morning-123456.us-east-2.aws.neon.tech/ledger?sslmode=require

# -----------------------------------------------------------------------------
# Authentication (JWT)
# -----------------------------------------------------------------------------
# Secret key for signing JWT access tokens (use a long random string)
JWT_SECRET=09d25e094faa6ca2556c818166b7a9563b93f7099f6f0f4caa6cf63b88e8d3e7

# Secret key for signing JWT refresh tokens (must differ from JWT_SECRET)
JWT_REFRESH_SECRET=f4a3b2c1e5d6a7b8c9d0e1f2a3b4c5d6e7f8a9b0c1d2e3f4a5b6c7d8e9f0a1b2

# JWT signing algorithm (default: HS256)
JWT_ALGORITHM=HS256

# Access token lifetime in minutes (default: 15)
ACCESS_TOKEN_EXPIRE_MINUTES=15

# Refresh token lifetime in days (default: 7)
REFRESH_TOKEN_EXPIRE_DAYS=7

# -----------------------------------------------------------------------------
# Google Cloud Vision (OCR)
# -----------------------------------------------------------------------------
# Path to GCP service account JSON file OR the JSON content as a string
GOOGLE_CLOUD_VISION_CREDENTIALS=/app/gcp-key.json

# -----------------------------------------------------------------------------
# OpenAI (NLP)
# -----------------------------------------------------------------------------
# OpenAI API key for expense extraction from OCR text
OPENAI_API_KEY=sk-proj-abc123...

# -----------------------------------------------------------------------------
# CORS / URLs
# -----------------------------------------------------------------------------
# Frontend origin URL (used for CORS configuration)
FRONTEND_URL=http://localhost:5173

# Backend API base URL (used by frontend)
BACKEND_URL=http://localhost:8000

# -----------------------------------------------------------------------------
# File Upload
# -----------------------------------------------------------------------------
# Maximum receipt image upload size in MB (default: 10)
MAX_UPLOAD_SIZE_MB=10

# Comma-separated allowed MIME types for receipt uploads (default: image/jpeg,image/png,image/webp)
ALLOWED_IMAGE_TYPES=image/jpeg,image/png,image/webp

# -----------------------------------------------------------------------------
# Application
# -----------------------------------------------------------------------------
# Deployment environment: dev, staging, or production (default: production)
ENVIRONMENT=dev

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL (default: INFO)
LOG_LEVEL=INFO
